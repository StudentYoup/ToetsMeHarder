<div class="bar-container">
    @for (int i = 0; i < _numberOfBars; i++)
    {
        <div class="vertical-bar">
            @foreach (var block in _blockMap[i])
            {
                <div class="falling-block"
                    style="--fall-duration: @(300/Metronome.BPM)s">
                </div>

            }
        </div>
    }
</div>