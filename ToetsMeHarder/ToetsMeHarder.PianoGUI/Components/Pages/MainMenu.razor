<button @onclick="Open" class="MenuButtons">Menu</button>

@if (_isMenuVisible)
{
    <div class="Overlay">
        <button @onclick="Close" class="exitButton">X</button>
        <div class="Menu">
            <h3>MainMenu</h3>
            <LiedjesKeuzeMenu OnOpen="Liedjemenu"/>
        </div>
    </div>
}

@if (_liedjeMenuOpen)
{
    <LiedjesKeuzeMenu OnClose="Liedjemenu" IsOpen="true"/>
}

@code {
    
    private bool _isMenuVisible = false;
    
    private bool _liedjeMenuOpen = false;

    private void Liedjemenu()
    {
        _liedjeMenuOpen = !_liedjeMenuOpen;
        _isMenuVisible = !_isMenuVisible;
    }

    private void Open()
    {
        _isMenuVisible = true;
        StateHasChanged();
    }

    private void Close() => _isMenuVisible = false;
}