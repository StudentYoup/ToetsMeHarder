@page "/metronome"
@inherits ToetsMeHarder.PianoGUI.Pages.MetronomeBase

<div class="metronome-container">
    <h2>Metronoom</h2>

    <div class="bpm-controls">
        <input @bind="BpmText" @bind:event="onchange" /> 
        <div class="arrows">
            <button @onclick="IncreaseBpm">▲</button>
            <button @onclick="DecreaseBpm">▼</button>
        </div>
        <button class="toggle-button" @onclick="ToggleMetronome">
            @(Metronome.IsRunning ? "Stop" : "Start")
        </button>
    </div>
</div>
