@using ToetsMeHarder.PianoGUI.Components.Layout
@page "/result"

<div>
    <p><strong>Titel:</strong> @resultManager._result.SongTitle</p>
    <p><strong>Totaal noten:</strong> @resultManager._result.TotalNotes</p>
    <p><strong>BPM:</strong> @resultManager._result.BPM</p>
    <p><strong>Hits:</strong> @resultManager._result.Hits</p>
    <p><strong>Misses:</strong> @resultManager._result.Misses</p>
    <p><strong>Accuracy:</strong>@(resultManager.CalculateAccuracy())%</p
    
</div>

<button @onclick="() => FallingBlocks.Instance.Retry()">Opnieuw</button>





